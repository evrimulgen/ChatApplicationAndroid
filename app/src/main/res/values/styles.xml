<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/chatColorPrimary</item>
        <item name="android:textColorPrimary">@color/chatTextColorPrimary</item>
        <item name="colorPrimaryDark">@color/chatColorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/chatColorPrimaryDark</item>
        <item name="android:windowBackground">@color/chatWindowBackground</item>
        <item name="android:navigationBarColor">@color/chatColorPrimaryDark</item>
        <item name="android:statusBarColor">@color/chatColorPrimaryDark</item>
        <item name="android:colorBackground">@color/chatWindowBackground</item>

    </style>

    <style name="MainHeader" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/chatColorPrimary</item>
        <item name="colorPrimaryDark">@color/chatColorPrimaryDark</item>
        <item name="colorAccent">#BF360C</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

</resources>
